<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingRight="10dip"
    android:paddingLeft="10dip" >

    <ImageView
        android:id="@+id/item_group_head_iv"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/chatroom_unknow_outline" />
    <!-- 信息展示列 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@id/item_group_head_iv"
        android:orientation="vertical" >

		<RelativeLayout
        	android:layout_marginRight="30dip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >

		    <TextView
		        android:id="@+id/item_group_friend_name_tv"
		        android:layout_width="90dip"
		        android:layout_height="wrap_content"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:text="ffasdfasdfasdfasdfsadfasdfasdf"
		        android:textColor="@color/font_black"
		        android:textSize="17sp"
		        android:textStyle="bold" >
		    </TextView>

		    <TextView
		        android:layout_alignParentRight="true"
		        android:id="@+id/item_group_lastconversation_time"
		        android:text="2012-2-10 20:23"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		</RelativeLayout>

        <!-- 昵称 -->

        

        <!-- 最后对话 -->

        <TextView
            android:id="@+id/item_group_lastconversation_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dip"
            android:lines="1"
            android:ellipsize="end"
            android:text="asdfjasdlfjalskjdhflksajdhglkjashdglkjashdglkjahsdglkashdglk"
            android:textColor="#ff1b63ad"
            android:textSize="14sp" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/list_next_icon"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/list_next" />
    <ImageView
        android:id="@+id/collect_friend_icon"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:paddingRight="10dip"
        android:clickable="true"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/list_next_icon"
        android:layout_centerVertical="true"
        android:background="@drawable/collected_on"
        android:visibility="gone"
        />

</RelativeLayout>