<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <Button
        android:id="@+id/server_icon"
        style="@style/server_voice_item_icon" />

    <TextView
        android:id="@+id/textView1"
        android:textColor="@color/black"
        style="@style/server_voice_item_text"
        android:layout_below="@+id/server_icon"
        android:text="@string/service" />

    <RelativeLayout
        android:id="@+id/server_msg"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_alignBottom="@+id/server_icon"
        android:layout_alignTop="@+id/server_icon"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/server_icon"
        android:background="@drawable/voice_server_btn" >

        <TextView
            android:id="@+id/server_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="2012-11-16 01:33"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/server_msg_time"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/server_msg_time"
            android:src="@drawable/laba" />

        <TextView
            android:id="@+id/local_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/server_msg_time"
            android:layout_marginTop="40dp"
            android:text="@string/voicemessage"
            android:textColor="@color/black" />

