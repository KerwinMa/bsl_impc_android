<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/new_attach_layout"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerInParent="true" >

            <ProgressBar
                android:id="@+id/new_attach_progressBar"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/new_attach_icon"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerInParent="true"
                android:src="@drawable/image_default" />
        </RelativeLayout>

        <TextView
            android:id="@+id/new_attach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件名称文件名称文件名称文件名称文件名称文件名称"
            android:textColor="@color/font_grey"
            android:textSize="15sp" 
            android:layout_gravity="center_vertical"
            android:maxWidth="150dip"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/new_attach_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1024kb"
            android:textColor="@color/font_grey"
            android:textSize="15sp" 
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginLeft="2dip"/>
        <TextView
            android:id="@+id/new_attach_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[已下载]"
            android:textColor="@color/font_grey"
            android:textSize="15sp" 
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginLeft="2dip"/>
    </LinearLayout>

</RelativeLayout>