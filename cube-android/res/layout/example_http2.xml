<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:layout_marginLeft="5dip"
	android:layout_marginRight="5dip">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_margin="5dip">

		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="时间优先"
			android:layout_gravity="left" android:gravity="left" />

		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="票价优先"
			android:layout_gravity="right" android:gravity="right" />

	</LinearLayout>

</LinearLayout>