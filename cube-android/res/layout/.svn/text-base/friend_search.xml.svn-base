<?xml version="1.0" encoding="utf-8"?>
<!-- 搜索框的布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/all_activity_bg_xml" >

    <Button
        android:id="@+id/friend_search_btn"
        android:textSize="14sp"
        android:textColor="#ff000000"
        android:layout_width="50dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_centerVertical="true"
        android:background="@drawable/chat_send_button_bg"
        android:text="搜索" 
        android:gravity="center"
        android:visibility="gone"
        >
    </Button>

    <!-- 搜索框 -->
    <EditText
        android:id="@+id/friend_search_et"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:paddingLeft="40dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/friend_search_btn"
        android:background="@drawable/amp_search_bg"
        android:layout_centerVertical="true"
        android:hint="请输入员工号或姓名"
        android:singleLine="true"
        >
    </EditText>

    <!-- 搜索图标 -->
    <ImageView
        android:id="@+id/search_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/friend_search_et"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:src="@drawable/app_search" />
        
    <!-- 清空搜索框图标 -->
    <ImageView
        android:id="@+id/search_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/friend_search_et"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:src="@drawable/app_search_close" />

</RelativeLayout>