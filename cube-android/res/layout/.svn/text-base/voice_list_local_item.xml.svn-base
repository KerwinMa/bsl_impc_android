<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/local_icon"
        style="@style/local_voice_item_icon"
        android:background="@drawable/local_icon"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        style="@style/local_voice_item_text"
        android:layout_below="@+id/local_icon"
        android:text="@string/user"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/local_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/local_icon"
        android:layout_alignTop="@+id/local_icon"
        android:layout_toLeftOf="@+id/local_icon"  android:layout_marginLeft="15dip"
        android:background="@drawable/voice_local_btn" >

<!--         <TextView -->
<!--             android:id="@+id/fillline_local" -->
<!--             android:layout_width="fill_parent" -->
<!--             android:layout_height="match_parent" -->
<!--             android:layout_marginLeft="22dp" -->
<!--             android:layout_weight="1" -->
<!--             android:background="@drawable/line_voice" /> -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/local_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2012-11-16 01:33"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/local_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/voicemessage"
                android:textColor="@color/black" />
        </LinearLayout>
        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/laba_big" />
    </LinearLayout>

</RelativeLayout>