<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">
		<FrameLayout android:id="@android:id/tabcontent" 
			android:layout_width="fill_parent" android:padding="5dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" 
			>
		</FrameLayout>
		<LinearLayout android:id="@+id/navContainer"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_alignParentBottom="true" android:layout_alignBottom="@android:id/tabcontent"
			 android:layout_marginBottom="0dip"
			 android:layout_weight="0" 
			android:layout_below="@android:id/tabcontent">
			<TabWidget android:id="@android:id/tabs" android:layout_marginTop="0dip"
				android:layout_width="fill_parent" android:layout_marginLeft="30dip" 
				android:layout_marginRight="30dip" android:layout_height="wrap_content">
			</TabWidget>
		</LinearLayout>

	</LinearLayout>
</TabHost>