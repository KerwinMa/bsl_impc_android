<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="local_voice_item_icon">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="local_voice_item_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="server_voice_item_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="local_voice_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="server_voice_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="titlebar">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#00FFcc</item>
    </style>

    <style name="textHeader2" parent="@android:style/TextAppearance">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 统一样式开始 -->
    <style name="datePicker">
        <item name="android:windowBackground">?android:color/primary_text_light</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:endYear">3000</item>
        <item name="android:startYear">1000</item>
    </style>

    <!-- 普通文本样式 -->
    <style name="textLine" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">18sp</item>
        <!-- <item name="android:textColor">?android:attr/textColorHint</item> -->
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="textLine_black" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textLine16_black" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="textLine14_black" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="textLine12_black" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="textLine2" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorHint</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textLine3" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorHint</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="textLine4" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorHint</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:gravity">left|center</item>
    </style>
    <!-- 文本Header样式 -->
    <style name="textHeader" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textHeader_black" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 文本小字体样式 -->
    <style name="textHint" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="textSmallHint" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!-- 统一样式结束 -->


    <!-- location  start -->
    <style name="location_item_text_header" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="location_item_text_line" parent="@android:style/TextAppearance">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="location_item_text_price" parent="@style/location_item_text_line">
        <item name="android:textColor">#fe6700</item>
    </style>

    <style name="location_item_text_blue" parent="@style/location_item_text_line">
        <item name="android:textColor">#0034ff</item>
    </style>

    <style name="location_detail_text_header" parent="@style/textHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="location_detail_text_Line_1" parent="@style/textLine3">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="location_detail_text_promote" parent="@style/location_detail_text_header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff3401</item>
    </style>

    <style name="location_detail_text_phone" parent="@style/location_detail_text_promote">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="location_room_infor_header" parent="@style/location_detail_text_promote">
        <item name="android:textColor">#333333</item>
    </style>

    <!-- rating bar style -->
    <style name="location_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar</item>
        <item name="android:isIndicator">true</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="location_spinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/dropdown</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- location  end -->


    <!-- message -->
    <style name="ChattingUISplit">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textColor">#ff404040</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">11.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#a0ffffff</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="list_linear">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="lln" parent="@style/prent_widget_ffv"></style>
    <!-- 宽高ff 垂直分布 -->
    <style name="prent_widget_ffv">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 宽高fw 水平分布 -->
    <style name="prent_widget_fwh">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MMFooter">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">54.0dip</item>
        <item name="android:minHeight">54.0dip</item>
    </style>

    <style name="NavPage">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/navpage</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="MMToolbarButton" parent="@style/MMButton">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">38.0dip</item>
        <item name="android:minHeight">50.0dip</item>
    </style>

    <style name="MMButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/mm_btn_text</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>
