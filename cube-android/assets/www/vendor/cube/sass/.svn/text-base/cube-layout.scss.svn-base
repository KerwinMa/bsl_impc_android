@import "compass/css3";

/*盒模型布局*/
.cube-layout-horizontal {
	@include display-box;
	@include box-orient(horizontal);
}

.cube-layout-vertical {
	@include display-box;
	@include box-orient(vertical);
}

.cube-layout-flex1 {
	@include box-flex(1);
}

/*导航栏基本配置*/
.cube-nav {
	height:43px; line-height:43px;
	border-bottom:1px solid #838a9a;
	background-color:#1468a2;
	@include background-image(linear-gradient(top, #1e93e4,#1676b9 3%,#11598c));
	
	color:#FFF;
	font-size:18px;
	text-align:center;
	text-shadow:0 1px 0 #fff;
	@include border-top-left-radius(4px);
	@include border-top-right-radius(4px);

	z-index: 100;

	.cube-nav-title {
		position: absolute;
		width: 100%;
	}

	.cube-nav-toolbar {
		position: absolute;
		width: 100%; 
		height: 100%;
		@include display-box;
		@include box-orient(horizontal);

		vertical-align: middle;

		.cube-nav-toolbar-left {
			vertical-align: middle;
			@include box-flex(1);
			text-align: left;
			margin-left: 0.5em;
		}
		.cube-nav-toolbar-right {
			padding-top: 5px;
			@include box-flex(1);
			text-align: right;
			margin-right: 0.5em;
		}
	}
}

.toolbar {
	padding:5px 0px;
}

/*固定header布局，此布局下有两个元素、header和div，header占43像素，其余由div占满屏*/
.cube-layout-nav {
	height: 100%;

	> .cube-nav {
		position: absolute; top:0; bottom:0; left:0; right:0;
	}

	> div {
		@include box-sizing(border-box);
		height: 100%;
		padding: 1.5em;
		padding-top: 43px;
	}
}

/*导航栏使用fixed定位，下面的页面内容勇padding-top拉到导航栏下面，整体布局不固定高度*/
.cube-layout-nav-fixtop {
	min-height: 100%;

	> .cube-nav {
		position: fixed; left:0; right:0;
	}

	> div {
		padding: 1.5em;
		padding-top: 43px;
	}
}
