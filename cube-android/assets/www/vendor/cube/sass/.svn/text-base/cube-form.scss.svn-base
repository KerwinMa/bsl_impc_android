@import "compass/css3";

.cube-form-fieldset {
	@include border-top-left-radius(0.4em);
	@include border-top-right-radius(0.4em);

	padding: 10px;

	> header {
		font-size: 18px;
		font-weight: bold;
		padding: 10px;
	}
}

.cube-form-field {
	
	@include box-orient(horizontal);
	display:block;
	border: 1px solid #DDD;
	background: white;


	.cube-form-label {
		background-color: #F7F7F7;
		@include box-flex(1);

		width:30%;
		padding-top:1em;
		padding-bottom:1em;
		padding-left:2%;
		display:inline-block;
	}

	.cube-form-textfield {
		@include box-flex(2);
		display:inline-block;
		width:64%;
		* {
			box-shadow: none;
			@include box-sizing(border-box);
			width: 100%;
			padding-top: 0.9em;
			padding-bottom:0.9em;
			border: 0px;
			height: 100%;
			margin: 0px;
			-webkit-border-radius: 0px;
			-moz-border-radius: 0px;
			border-radius: 0px;
		}
	}
}



