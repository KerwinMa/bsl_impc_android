@import "compass/css3";

.nav-refresh-container{
	position: relative;
}

.nav-refresh{
	width:65px;
	height:30px;
	line-height: 25px;
	border-radius: 0.4em;
	border: 1px solid black;
	background-color: white;
	background-image: none;
	background-color: #1676B9;
	background-image: -webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, #359ee7), color-stop(3%, #1985d0), color-stop(100%, #1468a2));
	float:right;
	@include background(linear-gradient(top, #359ee7,#1985d0 3%,#1468a2));
}

.nav-refresh span{
	padding-right: 8px;
	font-size: 14px;
   	line-height:31px;
    text-align:center;
}
